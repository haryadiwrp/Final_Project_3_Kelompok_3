<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:background="@color/bg_text"
        android:id="@+id/inputNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="50dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp">

            <Button
                android:backgroundTint="@color/bg_button_1"
                android:id="@+id/btnDelete"
                android:text="DELETE"
                android:onClick="deleteClick"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:backgroundTint="@color/bg_button_1"
                android:id="@+id/btnAnswer"
                android:text="ANSWER"
                android:onClick="equalClick"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp">

            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:backgroundTint="@color/bg_button_3"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:backgroundTint="@color/bg_button_3"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:backgroundTint="@color/bg_button_3"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button

                android:backgroundTint="@color/bg_button_2"
                android:id="@+id/btnDivide"
                android:text="/"
                android:onClick="operatorClick"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp">

            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:backgroundTint="@color/bg_button_3"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:backgroundTint="@color/bg_button_3"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:id="@+id/btn6"
                android:backgroundTint="@color/bg_button_3"
                android:text="6"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:backgroundTint="@color/bg_button_2"
                android:id="@+id/btnMinus"
                android:text="-"
                android:onClick="operatorClick"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp">

            <Button
                android:backgroundTint="@color/bg_button_3"
                android:id="@+id/btn7"
                android:text="7"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:backgroundTint="@color/bg_button_3"
                android:id="@+id/btn8"
                android:text="8"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:backgroundTint="@color/bg_button_3"
                android:id="@+id/btn9"
                android:text="9"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:backgroundTint="@color/bg_button_2"
                android:id="@+id/btnMultiple"
                android:text="x"
                android:onClick="operatorClick"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp">

            <Button
                android:backgroundTint="@color/bg_button_3"
                android:id="@+id/btnDot"
                android:text="."
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:backgroundTint="@color/bg_button_3"
                android:onClick="clickNumber"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:backgroundTint="@color/bg_button_2"
                android:id="@+id/btnPercent"
                android:text="%"
                android:onClick="percentClick"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <Button
                android:backgroundTint="@color/bg_button_2"
                android:id="@+id/btnPlus"
                android:text="+"
                android:onClick="operatorClick"
                android:layout_marginRight="1dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_width="50dp" />
        </TableRow>




    </TableLayout>



</LinearLayout>